<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/White">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/upload_img"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="20sp"

                android:src="@drawable/upload_img" />

            <!--  android:onClick="loadImagefromGallery"-->

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="8sp"
                android:gravity="center" />


            <EditText
                android:id="@+id/input_username"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/ragistar_corner"
                android:drawablePadding="20dp"
                android:inputType="text"

                android:lineSpacingExtra="5sp"
                android:paddingLeft="15dp" />

            <EditText
                android:id="@+id/input_firstname"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/ragistar_corner"
                android:drawablePadding="20dp"
                android:inputType="text"
                android:lineSpacingExtra="5sp"
                android:paddingLeft="15dp" />


            <EditText
                android:id="@+id/input_middlename"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/ragistar_corner"
                android:drawablePadding="20dp"
                android:inputType="text"
                android:lineSpacingExtra="5sp"
                android:paddingLeft="15dp"


                />


            <EditText
                android:id="@+id/input_lastname"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/ragistar_corner"
                android:drawablePadding="20dp"
                android:inputType="text"
                android:lineSpacingExtra="5sp"
                android:paddingLeft="15dp"


                />

            <EditText
                android:id="@+id/input_dob"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/ragistar_corner"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/calendar"
                android:inputType="text"
                android:lineSpacingExtra="5sp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"

                />


            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp" />

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:visibility="gone" />

            <!--<AutoCompleteTextView
                android:id="@+id/autoCompleteTextView1"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ragistar_corner"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10sp"
                android:inputType="text"
                />
-->
            <!--   <com.jaredrummler.materialspinner.MaterialSpinner
                   android:id="@+id/spinner"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20sp"
                   android:layout_marginRight="20sp"
                   android:layout_marginTop="10sp" />-->


            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinnerblood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="#d4d4d4" />


            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1"
                android:layout_gravity="center"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Gender:"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginLeft="5sp"
                    android:checked="true"
                    android:text="male"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:text="female"
                    android:textSize="14sp" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="#d4d4d4" />

            <TextView
                android:id="@+id/religion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp" />

            <Spinner
                android:id="@+id/spinnerreligion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp" />

            <TextView
                android:id="@+id/spinnerreligiontext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="#d4d4d4" />

            <Spinner
                android:id="@+id/spinnercast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="#d4d4d4" />

            <Spinner
                android:id="@+id/spinnersubcast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="#d4d4d4" />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinnermarital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="#d4d4d4" />


            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/ragistar_corner"
                android:drawablePadding="20dp"
                android:inputType="text"
                android:lineSpacingExtra="5sp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"

                />

            <EditText
                android:id="@+id/input_currentadd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/ragistar_corner"
                android:gravity="top"
                android:isScrollContainer="true"
                android:lines="4"
                android:maxLines="4"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:singleLine="false"></EditText>


            <EditText
                android:id="@+id/input_connumber"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/ragistar_corner"
                android:drawablePadding="20dp"
                android:inputType="text"
                android:layout_marginBottom="30sp"
                android:lineSpacingExtra="5sp"
                android:paddingLeft="15dp" />


           <!-- <ImageView
                android:id="@+id/aadharcard"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="5sp"
                android:src="@drawable/aadharcard" />

            <TextView
                android:id="@+id/aadharcardinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="8sp"
                android:gravity="center" />
-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:orientation="vertical">


                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="38sp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="15sp"
                    android:layout_marginLeft="70sp"
                    android:layout_marginRight="70sp"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/button_resource"
                    android:gravity="center"
                    android:text="Submit"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>