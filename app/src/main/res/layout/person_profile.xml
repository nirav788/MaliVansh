<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:layout_gravity="center"
            android:src="@drawable/icn_dashboard_admin" />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="5sp"
            android:gravity="fill_horizontal"
            android:singleLine="true"
            android:text="Hello Sachin"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="20sp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:drawablePadding="5sp"
            android:gravity="fill_horizontal"
            android:singleLine="true"
            android:text=" +91 9898989898"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="20sp"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:drawablePadding="5sp"
            android:gravity="fill_horizontal"
            android:singleLine="true"
            android:text="icvsurat@gmail.com"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:src="@drawable/ic_call_black_24dp" />


            <ImageView
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:src="@drawable/ic_location_on_black_24dp" />

            <ImageView
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:src="@drawable/ic_share_black_24dp" />

            <ImageView
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="15sp"
                android:src="@drawable/ic_zoom_in_black_24dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text5" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/callingliner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
                android:text="+91- 9898989898"
                android:gravity="center"
                android:textSize="24sp" />
            
            
            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginTop="30sp"
                android:src="@drawable/dial_number"
                android:id="@+id/callperson"/>


        </LinearLayout>

    </LinearLayout>


</ScrollView>


