<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagepersonal"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:src="@drawable/icn_dashboard_admin" />

                <TextView
                    android:id="@+id/textperson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:hint="Sachin"
                    android:text="sachin"
                    android:textColor="@color/black"
                    android:textColorHint="@color/White"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView

                    android:id="@+id/button1"
                    android:layout_width="130sp"
                    android:layout_height="35sp"
                    android:src="@drawable/btn_personal"></ImageView>

                <ImageView

                    android:id="@+id/button2"
                    android:layout_width="130sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="10sp"
                    android:src="@drawable/btn_educational"></ImageView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView

                    android:id="@+id/button3"
                    android:layout_width="130sp"
                    android:layout_height="35sp"
                    android:src="@drawable/btn_career"></ImageView>

                <ImageView

                    android:id="@+id/button4"
                    android:layout_width="130sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="10sp"
                    android:src="@drawable/btn_social"></ImageView>


            </LinearLayout>


            <ImageView

                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:src="@drawable/head_personal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:text="Fullname"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="2sp"
                android:text="fullname"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <RelativeLayout
                android:id="@+id/linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/dobhint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birth Date"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dobhint"
                    android:text="14/02/1974"
                    android:textColor="@color/black"
                    android:textSize="16sp"></TextView>


                <TextView
                    android:id="@+id/Bloodhint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:layout_toRightOf="@+id/dob"
                    android:text="Blood Group   "
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/Bloodgrup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dobhint"
                    android:layout_marginLeft="40sp"
                    android:layout_toRightOf="@+id/dob"
                    android:text="B+"
                    android:textColor="@color/black"
                    android:textSize="16sp"></TextView>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/linearLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/religionhint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Religion"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/Religion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/religionhint"
                    android:text="Hindu"
                    android:textColor="@color/black"
                    android:textSize="16sp"></TextView>


                <TextView
                    android:id="@+id/Casthint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80sp"
                    android:layout_toRightOf="@+id/Religion"
                    android:text="Cast"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/Cast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Casthint"
                    android:layout_marginLeft="80sp"
                    android:layout_toRightOf="@+id/Religion"
                    android:text="Mali"
                    android:textColor="@color/black"
                    android:textSize="16sp"></TextView>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/linearLayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/Subcasthint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sub Cast"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/Subcast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Subcasthint"
                    android:text="Maratha Mali"
                    android:textColor="@color/black"
                    android:textSize="16sp"></TextView>


                <TextView
                    android:id="@+id/Marridhint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:layout_toRightOf="@+id/Subcast"
                    android:text="Gender"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/Marrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Marridhint"
                    android:layout_marginLeft="40sp"
                    android:layout_toRightOf="@+id/Subcast"
                    android:text="Male"
                    android:textColor="@color/black"
                    android:textSize="16sp"></TextView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/HintAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Marridhint"
                    android:text="Current Address"
                    android:textColor="@color/black"
                    android:textSize="16sp"></TextView>

                <TextView
                    android:id="@+id/PermanentAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Permanent Address"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/PerAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Marridhint"
                    android:text="bandra ,Mumbai "
                    android:textColor="@color/black"
                    android:textSize="16sp"></TextView>


                <TextView
                    android:id="@+id/HintNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Contact Number"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/Phnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Marridhint"
                    android:text="+91 98251-02458"
                    android:textColor="@color/black"
                    android:textSize="16sp"></TextView>

                <TextView
                    android:id="@+id/HintEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Email Address"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/EmailAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Marridhint"
                    android:text="abc@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="16sp"></TextView>

                <TextView
                    android:id="@+id/LivePlaceHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Live Place"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/LivePlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Marridhint"
                    android:layout_marginBottom="40sp"
                    android:text="place"
                    android:textColor="@color/black"
                    android:textSize="16sp"></TextView>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</LinearLayout>
